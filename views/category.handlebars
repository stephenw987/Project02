{{! Module 15 Project 2: Note Taker - New Category and Current Category Inventory }}
{{! http://localhost:3000/category }}

<div>
  <h3>
    Enter your Category
  </h3>

  <form id="new-category-form">
    <div>
      <label for="category-name">Enter a new Category Name</label>
      <input type="text" id="category-name" name="category-name" />
    </div>

    <button type="submit">Save Category</button>
  </form>
</div>

<div>

  <h2>
    Current Categories
  </h2>

  {{#each categories}}

    <div>
      <h4>
        Category ID:
      </h4>
      <a href="/category/{{id}}">{{id}}</a>

    </div>

    <div>
      <h4>
        Category Name:
      </h4>
      <p> {{category_name}} </p>
      <br />

    </div>

  {{/each}}
</div>

<script src="/js/add-category.js"></script>