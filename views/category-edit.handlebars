{{! Module 15 Project 2: Note Taker - Edit / Delete Category }}
{{!-- http://localhost:3000/category/{{id}} --}}

<div>
  <form id="edit-category-form">
    {{! <label for="category-id">Category ID</label> }}
    <input
      type="hidden"
      name="category-id"
      id="category-id"
      value="{{category.id}}"
    />

    <label for="category-name" class="form-label">Category Name:</label>
    <input
      type="text"
      name="category-name"
      class="form-control"
      id="category-name"
      value="{{category.category_name}}"
    />
    <div class="d-grid d-sm-flex ">
      <button type="submit" class="btn btn-success m-3 fw-bold" id="save-btn">Save Changes</button>
      <button type="button" class="btn btn-danger m-3 fw-bold" id="delete-btn">Delete Category</button>
    </div>
  </form>
</div>

<script src="/js/edit-category.js"></script>